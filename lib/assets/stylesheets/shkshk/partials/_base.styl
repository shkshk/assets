html
  overflow-y: scroll

body
  color: $text-color
  background: $body-bg-color
  font: normal normal 100%/1.5625 $sans
  font-weight: 500
  font-stretch: normal
  -webkit-text-size-adjust: none

/* links */
a:link
  color: $link-color
  text-decoration: none

a:visited
  color: $link-visited-color

a:hover, a:active
  color: $link-hover-color
  text-decoration: none

/* headers, paragraphs */
h1, h2, h3, h4
  margin: 0 0 .5em
  line-height: 1.2

p
  margin: 0 0 1em

h1
  font-size: 2em

h2
  font-size: 1.5625em

h3
  font-size: 1.125em

h4
  font-size: 110%
  font-weight: bold

/* lists */
ul, ol
  list-style-position: inside
  margin: 0 0 1em
  padding-left: 1.5em

.container
  padding: 4em 1em
  max-width: 640px
  margin: 0 auto

.layout--single #page
  margin-top: 4em
