input
  font-size: 1em
  padding: 4px 6px
  font-family: $lucida

  &.placeholder
    color: #666

.order-form
  overflow: hidden

  .notice
    width: 47%
    float: left

  .price
    background: #fefef0
    padding: 1px 2px 2px
    border-radius: 3px

  h2
    margin-bottom: 1em

  form
    width: 50%
    float: right

    div
      margin: 0 0 1em

    input[type="text"]
      box-sizing: border-box
      width: 100%

    .help-text
      display: block
      font-size: 12px
      line-height: 16px
      color: lighten($text-color, 10%)

    .submits
      padding: .5em 0 0
      text-align: right

