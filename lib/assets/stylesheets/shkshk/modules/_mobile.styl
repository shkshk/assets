@media (max-width: 900px)
  .order-form
    .notice, form
      float: none
      width: auto
      max-width: 540px
      margin: 0 auto

  .payment-and-delivery, .made-personally, .made-with-love
    max-width: 540px

@media $tablet
  body
    font-size: 14px

  .general-container
    padding-top: 3em
    padding-bottom: 4em

  .made-personally__contents, .made-with-love__contents
    font-size: 1em

@media $ereader
  .welcome-brand
    border: none
    width: auto

@media $mobile
  body
    padding-bottom: 1em

  .welcome-brand
    border: none
    font-size: 87.5%

    h2
      font-size: 2.5em

    .scroll-more
      display: none

  #footer
    margin-top: 3em
